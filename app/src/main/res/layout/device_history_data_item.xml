<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_5"
    android:background="@drawable/shape_btn_bg">

    <TextView
        android:id="@+id/tv_key1"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:text="设备数据:"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_key1"
        app:layout_constraintTop_toTopOf="@+id/tv_key1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_key1"
        android:text="暂无数据"
        android:textSize="@dimen/sp_10"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_key2"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_key1"
        android:padding="8dp"
        android:text="设备数据:"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_value2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_key2"
        app:layout_constraintTop_toTopOf="@+id/tv_key2"
        app:layout_constraintBottom_toBottomOf="@+id/tv_key2"
        android:text="暂无数据"
        android:textSize="@dimen/sp_10"
        android:visibility="gone"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_view_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="更多数据"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10" />



</androidx.constraintlayout.widget.ConstraintLayout>
